{
    "manifest_version": 2,
    "name": "ruTorrent Remote",
    "description": "Adds a context menu for uploading a torrent to ruTorrent",
    "version": "1.0",

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "icons": {
        "16": "icons/rtorrent-16.ico"
    },

    "options_ui": {
    	"page": "options.html"
    },

    "permissions": [
        "<all_urls>",
        "activeTab",
        "contextMenus",
        "notifications",
        "storage"
    ]
}
